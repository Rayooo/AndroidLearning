<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_weight="3"
              android:id="@+id/sceneryTitleFragment"
              android:name="com.ray.lab4.SceneryTitleFragment"
    />

    <FrameLayout android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:id="@+id/sceneryContentLayout">
        <fragment android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/sceneryContentFragment"
                  android:name="com.ray.lab4.SceneryContentFragment"
        />

    </FrameLayout>

</LinearLayout>
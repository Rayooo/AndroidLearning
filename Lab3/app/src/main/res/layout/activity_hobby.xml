<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.ray.lab3.HobbyActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="请选择兴趣爱好"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐"
            android:id="@+id/MusicCheckBox"
            android:layout_below="@+id/textView" android:layout_alignParentStart="true" android:checked="false"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影"
            android:id="@+id/movieCheckBox" android:layout_below="@+id/MusicCheckBox" android:layout_alignEnd="@+id/MusicCheckBox"
            android:checked="false"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读"
            android:id="@+id/readingCheckBox" android:layout_below="@+id/movieCheckBox" android:layout_alignEnd="@+id/movieCheckBox"
            android:checked="false"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="篮球"
            android:id="@+id/basketballCheckBox" android:layout_below="@+id/readingCheckBox" android:layout_alignParentStart="true"
            android:checked="false"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="羽毛球"
            android:id="@+id/tennisCheckBox" android:layout_below="@+id/basketballCheckBox"
            android:checked="false"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:id="@+id/ok" android:layout_below="@+id/tennisCheckBox" android:layout_alignParentStart="true"
            android:onClick="ok"/>

</RelativeLayout>

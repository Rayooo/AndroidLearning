<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.ray.lab6.EditStudentUserInfoActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:id="@+id/userNameTextView"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/userNameEditText"
            android:gravity="center|right"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userNameEditText"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/userNameTextView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:id="@+id/passwordTextView"
            android:textSize="20dp"
            android:gravity="center|right"
            android:layout_alignTop="@+id/passwordEditText"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/passwordEditText"
            android:layout_alignBottom="@+id/passwordEditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordEditText"
            android:layout_below="@+id/userNameEditText"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/userNameEditText"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号"
            android:id="@+id/studentCodeTextView"
            android:textSize="20dp"
            android:gravity="center|right"
            android:layout_alignTop="@+id/studentCodeEditText"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/studentCodeEditText"
            android:layout_alignBottom="@+id/studentCodeEditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/studentCodeEditText"
            android:layout_below="@+id/passwordEditText"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/passwordEditText"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:id="@+id/nameTextView"
            android:gravity="center|right"
            android:textSize="20dp"
            android:layout_alignTop="@+id/nameEditText"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/nameEditText"
            android:layout_alignBottom="@+id/nameEditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameEditText"
            android:layout_below="@+id/studentCodeEditText"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/studentCodeEditText"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:id="@+id/mobileTextView"
            android:textSize="20dp"
            android:gravity="center|right"
            android:layout_alignTop="@+id/mobileEditText"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/mobileEditText"
            android:layout_alignBottom="@+id/mobileEditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mobileEditText"
            android:layout_below="@+id/nameEditText"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/nameEditText"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="住址"
            android:id="@+id/addressTextView"
            android:gravity="center|right" android:textSize="20dp"
            android:layout_alignTop="@+id/addressEditText"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/addressEditText"
            android:layout_alignBottom="@+id/addressEditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressEditText"
            android:layout_below="@+id/mobileEditText"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/mobileEditText"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  性别"
            android:textSize="20dp"
            android:gravity="center_vertical|right"
            android:id="@+id/sexTypeTextView"
            android:layout_alignTop="@+id/radioGroup"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/radioGroup"
            android:layout_alignBottom="@+id/radioGroup"/>


    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/addressEditText"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/addressEditText">

        <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:checked="true"/>

        <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"/>
    </RadioGroup>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:onClick="ok"
            android:id="@+id/okButton" android:layout_below="@+id/radioGroup" android:layout_centerHorizontal="true"/>


</RelativeLayout>
